<%- include('../common/header') -%>
<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">
            <a href="#">Admin</a>
        </li>
        <li class="breadcrumb-item active"><%- title %></li>
        <!-- Breadcrumb Menu-->
        <!-- <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Dashboard
                </a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Settings
                </a>
            </div>
        </li> -->
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn"> 
            <%- include('../common/flash') -%>                      
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-5">
                            <h4 class="card-title mb-0"><%-title-%></h4>
                            
                        </div>
                        <!-- /.col-->
                        <div class="col-sm-7 d-none d-md-block">
                            <a href="/admin/type" class="btn btn-sm btn-warning float-right" title="Back" data-toggle="tooltip">
                                <i class="fa fa-step-backward" aria-hidden="true"></i>
                            </a>
                        </div>
                        <!-- /.col-->
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <hr>
                        </div>
                    </div>
                    <!-- /.row-->
                    <!-- <div class="chart-wrapper" style="height:300px;margin-top:40px;">
                        <canvas class="chart" id="main-chart" height="300"></canvas>
                    </div> -->
                    <div class="row justify-content-center">
                        <div class="col-sm-8">
                            <form method="POST">
                                <div class="form-group row">
                                  <label for="name" class="col-sm-3 col-form-label">Name</label>
                                  <div class="col-sm-9">
                                    <input type="text" class="form-control" id="name" placeholder="Name" name="name" autofocus>
                                  </div>
                                </div>

                                <% 
                                for(var key in permissions){                        
                                %>
                                <div class="form-group row">
                                    <label for="<%-permissions[key]-%>" class="col-sm-3 col-form-label text-capitalize"><%-permissions[key]-%></label>
                                    <div class="col-md-9">
                                        <label class="switch switch-success">
                                            <input type="checkbox" class="switch-input" checked name="<%-permissions[key]-%>" id="<%-permissions[key]-%>">
                                            <span class="switch-slider"></span>
                                        </label>
                                    </div>
                                </div>
                                <% } %>

                                
                                <div class="form-group row">
                                    <div class="col-sm-12 text-right">
                                        <button class="btn btn-sm btn-success">Create</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                        
            </div>
            <!-- /.card-->
        </div>
    </div>
</main>
<%- include('../common/footer') -%>